# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=mealplan
APP_VERSION=1.0.0
DEBUG=False

# ============================================================================
# Database (MongoDB)
# ============================================================================
# MongoDB connection string
# Format: mongodb://[username]:[password]@[host]:[port]/[database]?[options]
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=shopify_meals_db

# ============================================================================
# Shopify Configuration
# ============================================================================
# Your Shopify shop domain (e.g., your-shop.myshopify.com)
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

# Shopify API credentials (from your Shopify app settings)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# App Proxy Secret (for validating app proxy requests)
SHOPIFY_APP_PROXY_SECRET=your_app_proxy_secret_here

# Optional: Shopify Admin API Access Token (fallback if OAuth token not available)
SHOPIFY_ADMIN_ACCESS_TOKEN=

# Optional: Shopify Storefront API Access Token
SHOPIFY_STOREFRONT_ACCESS_TOKEN=

# ============================================================================
# Security & Authentication
# ============================================================================
# JWT Secret Key (generate a strong random string, min 32 characters)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_jwt_secret_key_here_min_32_characters

# JWT Algorithm
ALGORITHM=HS256

# Access Token Expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin API Key (for admin endpoints)
ADMIN_API_KEY=your_admin_api_key_here

# ============================================================================
# OpenAI Configuration (Optional)
# ============================================================================
# OpenAI API Key (required for AI meal suggestions)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ============================================================================
# Subscription Providers (Optional)
# ============================================================================
# Recharge API Key (if using Recharge)
RECHARGE_API_KEY=
RECHARGE_SHOP=

# Appstle API Key (if using Appstle)
APPSTLE_API_KEY=

# Loop API Key (if using Loop)
LOOP_API_KEY=

# ============================================================================
# PDF Generation (Optional)
# ============================================================================
PDF_STORAGE_PATH=./storage/pdfs
PDF_BASE_URL=https://api.yourdomain.com/pdfs
PDF_GENERATION_METHOD=reportlab

# PDFMonkey API (if using PDFMonkey)
PDFMONKEY_API_KEY=
PDFMONKEY_TEMPLATE_ID=

# Documint API (if using Documint)
DOCUMINT_API_KEY=

# ============================================================================
# Application URLs
# ============================================================================
# Base URL for OAuth redirects (update with ngrok URL in production)
APP_BASE_URL=http://localhost:8000

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# Examples:
#   - http://localhost:3000,http://localhost:3001
#   - https://*.myshopify.com
#   - https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://*.myshopify.com
